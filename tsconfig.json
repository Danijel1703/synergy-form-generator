{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": false,
		"paths": {
			"synergy-form-generator/*": ["./src/*"],
			"models/*": ["./src/models/*"],
			"pages/*": ["./src/pages/*"],
			"router/*": ["./src/router/*"],
			"routes/*": ["./src/router/routes/*"],
			"constants/*": ["./src/constants/*"],
			"stores/*": ["./src/stores/*"],
			"styles/*": ["./src/styles/*"],
			"validators/*": ["./src/form/validators/*"],
			"classes/*": ["./src/classes/*"]
		},

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
